generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String  @id @default(uuid())
  email     String  @unique
  clerkId   String  @unique
  role      Role    @default(USER)
  firstName String?
  lastName  String?
  imageUrl  String?

  problems Problem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([id, email])
}

model Problem {
  id          String     @id @default(uuid())
  title       String     @unique
  description String
  difficulty  Difficulty
  tags        String[]
  creatorId   String
  examples    Json // Language-specific examples stored as JSON
  constraints String
  hints       String?
  editorial   String?

  testCases          Json
  codeSnippets       Json
  referenceSolutions Json

  user User @relation(fields: [creatorId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([difficulty])
}

enum Role {
  ADMIN
  USER
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}
